{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "externalConsole": true,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}/src"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ]
        }
    ]
}